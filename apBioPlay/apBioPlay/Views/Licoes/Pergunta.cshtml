
@{
    Layout = null;

    int indResp = 0;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/pergunta.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Pergunta</title>
</head>
<body>
    <section id="home-hero">
        <div class="container">

            <h1>Selecione o lixo correto</h1>

            <form action="" method="post">
                <input type="text" hidden id="selecionada" value="@indResp">
                <ul>
                    @{ int ind = 1; }
                    @foreach (apBioPlay.Models.Resposta resp in ViewBag.respostas)
                    {
                        string p = "pic" + ind;
                        string r = "resp" + ind;
                        <li>
                            <input type="radio" name="pic" id="@p" />
                            <label for="@p"><img src=@resp.UrlImagem></label>
                            <h1 id="@r">@resp.Texto</h1>
                        </li>
                        ++ind;
                    }
                </ul>
            </form>

            <hr />

            @Html.ActionLink("Enviar Resposta", "ProximaPergunta", new { resp = ViewBag.respostas[indResp] })

        </div>
    </section>
</body>
</html>
